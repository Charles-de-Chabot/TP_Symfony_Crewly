{% extends 'base.html.twig' %}

{% block title %}Mon compte - Crewly{% endblock %}

{% block body %}
	<div class="min-h-screen bg-main py-8">
		<div class="container-main">
			{% include "partials/_messages.html.twig" %}

			<div class="mb-8">
				<h1 class="text-4xl font-bold text-gray-900 mb-2">Mon compte</h1>
				<p class="text-gray-600">Gérez vos informations de profil</p>
			</div>

			<div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
				{# Sidebar - Infos principales #}
				<div class="lg:col-span-1">
					<div class="card card-padded sticky top-24 mb-6">
						<div class="text-center mb-6">
							<div class="w-24 h-24 rounded-full bg-linear-to-br from-purple-400 to-blue-400 flex items-center justify-center text-white font-bold text-4xl mx-auto mb-4">
								{{ user.firstName|slice(0, 1)|upper }}{{ user.lastName|slice(0, 1)|upper }}
							</div>
							<h2 class="text-2xl font-bold text-gray-900">{{ user.firstName }} {{ user.lastName }}</h2>
							<p class="text-gray-600 text-sm">{{ user.email }}</p>
						</div>

						<div class="border-t border-gray-200 pt-6 space-y-4">
							<div>
								<p class="text-sm font-semibold text-gray-700 mb-1">Inscrit depuis</p>
								<p class="text-gray-900">{{ user.createdAt|date('d/m/Y') }}</p>
							</div>
							<div>
								<p class="text-sm font-semibold text-gray-700 mb-1">Statut</p>
								<span class="badge-success">
									{% if user.isActive %}
										Actif
									{% else %}
										Inactif
									{% endif %}
								</span>
							</div>
							{% if is_granted('ROLE_ADMIN') %}
								<div>
									<p class="text-sm font-semibold text-gray-700 mb-1">Rôle</p>
									<span class="badge-category">Administrateur</span>
								</div>
							{% endif %}
						</div>

						<div class="border-t border-gray-200 pt-6 mt-6">
							<a href="{{ path('app_profile_edit') }}" class="btn-primary w-full text-center flex items-center justify-center space-x-2">
								<svg class="w-5 h-5" fill="none" stroke="currentColor" viewbox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
								</svg>
								<span>Modifier mon profil</span>
							</a>
						</div>
					</div>
				</div>

				{# Contenu principal - Détails #}
				<div class="lg:col-span-2">
					<div class="card card-padded mb-6">
						<h3 class="text-2xl font-bold text-gray-900 mb-6">Informations personnelles</h3>

						<div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
							<div>
								<p class="text-sm font-semibold text-gray-700 mb-2">Prénom</p>
								<p class="text-lg text-gray-900 font-medium">{{ user.firstName }}</p>
							</div>
							<div>
								<p class="text-sm font-semibold text-gray-700 mb-2">Nom</p>
								<p class="text-lg text-gray-900 font-medium">{{ user.lastName }}</p>
							</div>
							<div>
								<p class="text-sm font-semibold text-gray-700 mb-2">Email</p>
								<p class="text-lg text-gray-900 font-medium">{{ user.email }}</p>
							</div>
							<div>
								<p class="text-sm font-semibold text-gray-700 mb-2">Téléphone</p>
								<p class="text-lg text-gray-900 font-medium">{{ user.phoneNumber|default('Non renseigné') }}</p>
							</div>
						</div>
					</div>

					<div class="card card-padded mb-6">
						<h3 class="text-2xl font-bold text-gray-900 mb-6">Mon Adresse</h3>
						{% if adress %}
							<div class="grid grid-cols-1 md:grid-cols-2 gap-6">
								<div class="md:col-span-2">
									<p class="text-sm font-semibold text-gray-700 mb-2">Rue</p>
									<p class="text-lg text-gray-900 font-medium">{{ adress.houseNumber }} {{ adress.streetName }}</p>
								</div>
								<div>
									<p class="text-sm font-semibold text-gray-700 mb-2">Code Postal</p>
									<p class="text-lg text-gray-900 font-medium">{{ adress.postcode }}</p>
								</div>
								<div>
									<p class="text-sm font-semibold text-gray-700 mb-2">Ville</p>
									<p class="text-lg text-gray-900 font-medium">{{ adress.city }}</p>
								</div>
							</div>
						{% else %}
							<p class="text-gray-600">Aucune adresse enregistrée.</p>
						{% endif %}
					</div>

					<div class="card card-padded mb-6">
						<h3 class="text-2xl font-bold text-gray-900 mb-6">Mes Locations</h3>
						{% if rentals is not empty %}
							<div class="space-y-4">
								{% for rental in rentals %}
									<div class="border border-gray-200 rounded-lg p-4 hover:bg-gray-50 transition-colors">
										<div class="flex justify-between items-start">
											<div>
												<h4 class="font-bold text-lg text-gray-900">{{ rental.boat.name }}</h4>
												<p class="text-sm text-gray-600">
													Du {{ rental.rentalStart|date('d/m/Y') }} au {{ rental.rentalEnd|date('d/m/Y') }}
												</p>
											</div>
											<div class="text-right">
												<p class="font-bold text-primary">{{ rental.rentalPrice }} €</p>
												<div class="flex flex-col items-end space-y-1 mt-1">
													<a href="{{ path('app_rental_show', {id: rental.id}) }}" class="text-sm text-accent hover:underline">Voir le bateau</a>
													<a href="{{ path('app_rental_edit', {id: rental.id}) }}" class="text-xs text-gray-500 hover:text-gray-800 border border-gray-200 rounded px-2 py-1 transition-colors">Modifier dates</a>
													{% if rental.rentalStart > date() %}
														<form method="post" action="{{ path('app_rental_delete', {'id': rental.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir annuler cette location ?');">
															<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ rental.id) }}">
															<button class="text-xs text-red-500 hover:text-red-700 border border-red-200 hover:border-red-300 rounded px-2 py-1 transition-colors bg-white">supprimer</button>
														</form>
													{% endif %}
												</div>
											</div>
										</div>
									</div>
								{% endfor %}
							</div>
						{% else %}
							<p class="text-gray-600">Vous n'avez pas encore effectué de location.</p>
							<a href="{{ path('app_boat_index') }}" class="btn-primary mt-4 inline-block">Découvrir la flotte</a>
						{% endif %}
					</div>
				</div>
		</div>
	</div>
{% endblock %}