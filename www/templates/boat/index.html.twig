{% extends 'base.html.twig' %}

{% block title %}La Flotte - Crewly
{% endblock %}

{% block body %}
	<div class="min-h-screen bg-main py-8">
		<div class="container-main">
			{% include "partials/_messages.html.twig" %}
			<!-- En tête -->
			<div class ="grid grid-cols-2 mb-4">
				<div class="mb-8 px-4">
					<h1 class="text-4xl text-gray-700 mb-2">Tous les Bateaux</h1>
					<p class="text-gray-600">Découvrez notre flotte
					</p>
				</div>
				{% if not app.user %}
					<div class="mb-8 px-4 py-2">
						<a href="{{ path('app_login') }}" class="text-xl text-blue-900 mb-2 hover:underline hover:text-primary-dark hover:cursor-pointer">
							<span>Connectez-vous pour accéder à la location</span>
						</a>
					</div>
				{% else %}
					<div class="calendar-section bg-white p-4 rounded-lg shadow-sm border border-gray-100">
						<label class="block text-sm font-medium text-gray-700 mb-1">Dates de navigation souhaitées :</label>
						<div class="flex items-center gap-2">
							<input type="text" id="date-picker" 
								class="form-select w-full" 
								placeholder="Sélectionnez vos dates"
								value="{{ app.request.query.get('start') ? 'Sélectionnez vos dates' : '' }}">
							
							{% if app.request.query.get('start') %}
								<a href="{{ path('app_boat_index') }}" class="text-xs text-red-500 hover:underline">Effacer</a>
							{% endif %}
						</div>
					</div>

					<script>
						document.addEventListener('DOMContentLoaded', function() {
							flatpickr("#date-picker", {
								mode: "range",
								minDate: "today",
								dateFormat: "Y-m-d",
								locale: "fr",
								onChange: function(selectedDates, dateStr, instance) {
									if (selectedDates.length === 2) {
										// On récupère l'URL actuelle
										const url = new URL(window.location.href);
										
										// On ajoute/met à jour les paramètres de date
										url.searchParams.set('start', selectedDates[0].toISOString());
										url.searchParams.set('end', selectedDates[1].toISOString());
										
										// On redirige sans perdre les filtres (type, model, city)
										window.location.href = url.toString();
									}
								}
							});
						});
					</script>
				{% endif %}
			</div>
			{# systeme de tri et filtre  #}
			<div class="card-sm p-6 mb-8">
				<form class="flex flex-col md:flex-row gap-4" action="{{ path('app_boat_index') }}" method="get">
					<div
						class="flex-1">
						{# filtre de type #}
						<label for="type" class="form-label">
							Type
						</label>
						<select name="type" id="type" class="form-select" onchange="this.form.submit()">
							<option value="0" {{ currentType == 0 ? 'selected' : '' }}>Tous les types</option>
							{% for type in types %}
								<option value="{{ type.id }}" {{ currentType == type.id ? 'selected' : '' }}>
									{{ type.label }}
								</option>
							{% endfor %}
						</select>
					</div>
					<div
						class="flex-1">
						{# filtre de model #}
						<label for="model" class="form-label">
							Model
						</label>
						<select name="model" id="model" class="form-select" onchange="this.form.submit()">
							<option value="0" {{ currentModel == 0 ? 'selected' : '' }}>Tous les modèles</option>
							{% for model in models %}
								<option value="{{ model.id }}" {{ currentModel == model.id ? 'selected' : '' }}>
									{{ model.label }}
								</option>
							{% endfor %}
						</select>
					</div>
					<div
						class="flex-1">
						{# filtre de city #}
						<label for="city" class="form-label">
							Ville
						</label>
						<select name="city" id="city" class="form-select" onchange="this.form.submit()">
							<option value="0" {{ currentCity == '0' ? 'selected' : '' }}>Toutes les villes</option>
							{% for city in cities %}
								<option value="{{ city }}" {{ currentCity == city ? 'selected' : '' }}>
									{{ city }}
								</option>
							{% endfor %}
						</select>
					</div>


					{# bouton de reinitialisation  #}
					{% if currentType != 0 or currentModel != 0 or currentCity != '0' %}
						<div class="flex items-end">
							<a href="{{ path('app_boat_index') }}" class="px-4 py-2 transition-colors link-nav">
								Réinitialiser
							</a>
						</div>
					{% endif %}

				</form>
			</div>

			<!-- Liste des boats -->
			{% if boats|length > 0 %}
				<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
					{% for boat in boats %}
						<div
							class="card-hover overflow-hidden flex flex-col">
							<!-- Image du boat -->
							<a class="block" href="#">
								{% if boat.media|length > 0 %}
									<img class="w-full h-48 object-cover" src="{{ asset('uploads/boats/' ~ boat.media.first.imgPath) }}" alt="{{ boat.name }}">
								{% else %}
									<div class="w-full h-48 gradient-placeholder flex items-center justify-center">
										<svg class="w-16 h-16 text-primary" fill="none" stroke="currentColor" viewbox="0 0 24 24">
											<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
										</svg>
									</div>
								{% endif %}
							</a>


							<!-- contenu de la carte -->
							<div
								class="p-6 flex flex-col flex-1">
								<!-- type -->
								<div class="mb-3">
									<span class="badge-category-sm bg-primary-light text-primary">
										{{ boat.type.label }}
									</span>
								</div>

								<!-- titre -->
								<h3 class="text-xl text-gray-900 mb-2 line-clamp-2">
									<a class="link-nav transition-all duration-200 hover:underline" href="#">
										{{ boat.name }}
									</a>
								</h3>

								<!-- description -->
								<p class="text-gray-600 text-sm mb-4 line-clamp-3 flex-1">
									{{ boat.description|default("Pas de descption") }}
								</p>

								{# informations #}
								<div class="border-t border-gray-100 pt-4 mt-auto flex items-center justify-between text-sm text-gray-500">
									<div
										class="flex items-center gap-4">
										{# Capacité #}
										<div class="flex items-center gap-1" title="Capacité">
											<svg class="w-4 h-4" fill="none" stroke="currentColor" viewbox="0 0 24 24">
												<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0z"></path>
											</svg>
											<span>{{ boat.maxUser }}</span>
										</div>
										{# Ville #}
										<div class="flex items-center gap-1" title="Ville">
											<svg class="w-4 h-4" fill="none" stroke="currentColor" viewbox="0 0 24 24">
												<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
												<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
											</svg>
											<span>{{ boat.adress.city|default('N/A') }}</span>
										</div>
									</div>
								</div>
							</div>
						</div>
					{% endfor %}
				</div>
			{% else %}
				<div class="text-center py-12 bg-gray-50 rounded-lg">
					<p class="text-xl text-gray-500 mb-4">Aucun bateau ne correspond à vos critères.</p>
					<a href="{{ path('app_boat_index') }}" class="text-primary hover:underline font-medium">
						Réinitialiser les filtres
					</a>
				</div>
			{% endif %}
		</div>
	</div>

{% endblock %}
