{% extends 'base.html.twig' %}

{% block title %}Administration des Bateaux{% endblock %}

{% block body %}
<div class="bg-gray-900 min-h-screen py-12 text-gray-100">
    <div class="container-main">
        
        {# En-tête #}
        <div class="flex flex-col md:flex-row justify-between items-end gap-4 mb-8 border-b border-gray-700 pb-6">
            <div>
                <h1 class="text-3xl font-bold text-white">Gestion de la Flotte</h1>
                <p class="text-gray-400 mt-2">Gérez l'ensemble des bateaux disponibles sur la plateforme.</p>
            </div>
            <div class="flex gap-3">
                <a href="{{ path('app_admin_dashboard') }}" class="bg-gray-800 hover:bg-gray-700 text-white border border-gray-600 text-sm px-4 py-2 rounded-md transition-colors">
                    &larr; Dashboard
                </a>
                <a href="{{ path('app_admin_boat_new') }}" class="bg-blue-600 hover:bg-blue-700 text-white font-medium text-sm px-4 py-2 rounded-md transition-colors flex items-center gap-2">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path></svg>
                    Ajouter un bateau
                </a>
            </div>
        </div>

        {# Filtres #}
        <div class="bg-gray-800 rounded-xl shadow-lg p-6 border border-gray-700 mb-8">
            <form method="get" action="{{ path('app_admin_boat_index') }}" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
                
                {# Filtre Type #}
                <div>
                    <label for="type" class="block text-xs font-medium text-gray-400 mb-1 uppercase">Type</label>
                    <select name="type" id="type" onchange="this.form.submit()" class="w-full bg-gray-700 border border-gray-600 text-white text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block p-2.5">
                        <option value="0">Tous les types</option>
                        {% for type in types %}
                            <option value="{{ type.id }}" {{ currentType == type.id ? 'selected' : '' }}>
                                {{ type.label }}
                            </option>
                        {% endfor %}
                    </select>
                </div>

                {# Filtre Modèle #}
                <div>
                    <label for="model" class="block text-xs font-medium text-gray-400 mb-1 uppercase">Modèle</label>
                    <select name="model" id="model" class="w-full bg-gray-700 border border-gray-600 text-white text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block p-2.5">
                        <option value="0">Tous les modèles</option>
                        {% for model in models %}
                            <option value="{{ model.id }}" {{ currentModel == model.id ? 'selected' : '' }}>
                                {{ model.label }}
                            </option>
                        {% endfor %}
                    </select>
                </div>

                {# Filtre Ville #}
                <div>
                    <label for="city" class="block text-xs font-medium text-gray-400 mb-1 uppercase">Ville</label>
                    <select name="city" id="city" class="w-full bg-gray-700 border border-gray-600 text-white text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block p-2.5">
                        <option value="0">Toutes les villes</option>
                        {% for city in cities %}
                            <option value="{{ city }}" {{ currentCity == city ? 'selected' : '' }}>
                                {{ city }}
                            </option>
                        {% endfor %}
                    </select>
                </div>

                {# Boutons #}
                <div class="flex items-end gap-2">
                    <button type="submit" class="flex-1 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-lg text-sm px-4 py-2.5 transition-colors">
                        Filtrer
                    </button>
                    {% if currentType or currentModel or currentCity != '0' %}
                        <a href="{{ path('app_admin_boat_index') }}" class="bg-gray-700 hover:bg-gray-600 text-gray-300 hover:text-white rounded-lg p-2.5 transition-colors" title="Réinitialiser">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path></svg>
                        </a>
                    {% endif %}
                </div>
            </form>
        </div>

        {# Tableau #}
        <div class="bg-gray-800 rounded-xl shadow-lg border border-gray-700 overflow-hidden">
            <div class="overflow-x-auto">
                <table class="w-full text-sm text-left text-gray-400">
                    <thead class="text-xs text-gray-400 uppercase bg-gray-700/50 border-b border-gray-700">
                        <tr>
                            <th scope="col" class="px-6 py-4">Bateau</th>
                            <th scope="col" class="px-6 py-4">Type / Modèle</th>
                            <th scope="col" class="px-6 py-4">Localisation</th>
                            <th scope="col" class="px-6 py-4">Capacité</th>
                            <th scope="col" class="px-6 py-4 text-center">Statut</th>
                            <th scope="col" class="px-6 py-4 text-right">Actions</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-gray-700">
                        {% for boat in boats %}
                            <tr class="hover:bg-gray-700/30 transition-colors">
                                <td class="px-6 py-4">
                                    <div class="flex items-center gap-3">
                                        <div class="flex-shrink-0 w-10 h-10 bg-gray-700 rounded overflow-hidden">
                                            {% if boat.media|length > 0 %}
                                                <img src="{{ asset('uploads/boats/' ~ boat.media.first.imgPath) }}" alt="" class="w-full h-full object-cover">
                                            {% else %}
                                                <div class="w-full h-full flex items-center justify-center text-gray-500">
                                                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path></svg>
                                                </div>
                                            {% endif %}
                                        </div>
                                        <div>
                                            <div class="font-bold text-white">{{ boat.name }}</div>
                                            <div class="text-xs text-gray-500">#{{ boat.id }}</div>
                                        </div>
                                    </div>
                                </td>
                                <td class="px-6 py-4">
                                    <div class="text-white">{{ boat.type.label }}</div>
                                    <div class="text-xs">{{ boat.model.label }}</div>
                                </td>
                                <td class="px-6 py-4">
                                    <div class="flex items-center gap-1">
                                        <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path></svg>
                                        {{ boat.adress.city|default('N/A') }}
                                    </div>
                                </td>
                                <td class="px-6 py-4">
                                    {{ boat.maxUser }} pers.
                                </td>
                                <td class="px-6 py-4 text-center">
                                    {% if boat.isActive %}
                                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-900/50 text-green-400 border border-green-800">
                                            Actif
                                        </span>
                                    {% else %}
                                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-900/50 text-red-400 border border-red-800">
                                            Inactif
                                        </span>
                                    {% endif %}
                                </td>
                                <td class="px-6 py-4 text-right">
                                    <div class="flex items-center justify-end gap-3">
                                        <a href="{{ path('app_admin_boat_show', {'id': boat.id}) }}" class="text-gray-400 hover:text-white transition-colors">
                                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path></svg>
                                        </a>
                                        <a href="{{ path('app_admin_boat_edit', {'id': boat.id}) }}" class="text-blue-400 hover:text-blue-300 transition-colors">
                                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path></svg>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="6" class="px-6 py-12 text-center">
                                    <div class="flex flex-col items-center justify-center text-gray-500">
                                        <svg class="w-12 h-12 mb-3 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
                                        <p class="text-lg font-medium text-gray-400">Aucun bateau trouvé</p>
                                        <p class="text-sm">Essayez de modifier vos filtres de recherche.</p>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
            <div class="bg-gray-700/30 px-6 py-3 border-t border-gray-700">
                <p class="text-xs text-gray-500">Total : {{ boats|length }} enregistrements</p>
            </div>
        </div>
    </div>
</div>
{% endblock %}