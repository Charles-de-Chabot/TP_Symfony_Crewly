{% extends 'base.html.twig' %}

{% block title %}Détails du Bateau - {{ boat.name }}{% endblock %}

{% block body %}
<div class="bg-gray-900 min-h-screen py-12 text-gray-100">
    <div class="container-main">
        
        {# En-tête #}
        <div class="flex flex-col md:flex-row justify-between items-start md:items-center gap-4 mb-8 border-b border-gray-700 pb-6">
            <div>
                <div class="flex items-center gap-3 mb-1">
                    <h1 class="text-3xl font-bold !text-white">{{ boat.name }}</h1>
                    {% if boat.isActive %}
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-900/50 text-green-400 border border-green-800">
                            Actif
                        </span>
                    {% else %}
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-900/50 text-red-400 border border-red-800">
                            Inactif
                        </span>
                    {% endif %}
                </div>
                <p class="text-gray-400 text-sm">Identifiant technique : #{{ boat.id }}</p>
            </div>
            <div class="flex gap-3">
                <a href="{{ path('app_admin_boat_index') }}" class="bg-gray-800 hover:bg-gray-700 text-white border border-gray-600 text-sm px-4 py-2 rounded-md transition-colors">
                    &larr; Retour
                </a>
                <a href="{{ path('app_admin_boat_edit', {'id': boat.id}) }}" class="bg-blue-600 hover:bg-blue-700 text-white font-medium text-sm px-4 py-2 rounded-md transition-colors flex items-center gap-2">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path></svg>
                    Modifier
                </a>
            </div>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
            
            {# Colonne Gauche : Média & Infos Clés #}
            <div class="lg:col-span-1 space-y-6">
                {# Carte Image #}
                <div class="bg-gray-800 rounded-xl shadow-lg overflow-hidden border border-gray-700">
                    <div class="aspect-w-16 aspect-h-12 bg-gray-700 relative h-64">
                        {% if boat.media|length > 0 %}
                            <img src="{{ asset('uploads/boats/' ~ boat.media.first.imgPath) }}" alt="{{ boat.name }}" class="w-full h-full object-cover">
                        {% else %}
                            <div class="w-full h-full flex items-center justify-center text-gray-500">
                                <svg class="w-16 h-16" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path></svg>
                            </div>
                        {% endif %}
                    </div>
                    <div class="p-4 border-t border-gray-700">
                        <div class="text-center">
                            <div class="p-3 bg-gray-700/50 rounded-lg border border-gray-600">
                                <span class="block text-xs text-gray-400 uppercase mb-1">Capacité</span>
                                <span class="block text-xl font-bold text-white">{{ boat.maxUser }} pers.</span>
                            </div>
                        </div>
                    </div>
                </div>

                {# Carte Localisation #}
                <div class="bg-gray-800 rounded-xl shadow-lg p-6 border border-gray-700">
                    <h3 class="text-lg font-bold !text-white mb-4 flex items-center gap-2">
                        <svg class="w-5 h-5 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path></svg>
                        Localisation
                    </h3>
                    <div class="space-y-2 text-gray-300">
                        {% if boat.adress %}
                            <p class="font-medium text-white">{{ boat.adress.street|default('') }}</p>
                            <p>{{ boat.adress.zipCode|default('') }} {{ boat.adress.city|default('Ville non renseignée') }}</p>
                            <p class="text-sm text-gray-500 mt-2">Pays: {{ boat.adress.country|default('France') }}</p>
                        {% else %}
                            <p class="text-gray-500 italic">Aucune adresse renseignée</p>
                        {% endif %}
                    </div>
                </div>
            </div>

            {# Colonne Droite : Détails & Specs #}
            <div class="lg:col-span-2 space-y-6">
                
                {# Informations Générales #}
                <div class="bg-gray-800 rounded-xl shadow-lg p-6 border border-gray-700">
                    <h3 class="text-lg font-bold !text-white mb-4 border-b border-gray-700 pb-2">Informations Générales</h3>
                    
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
                        <div>
                            <span class="text-xs text-gray-400 uppercase block mb-1">Modèle</span>
                            <span class="text-white font-medium text-lg">{{ boat.model.label|default('N/A') }}</span>
                        </div>
                        <div>
                            <span class="text-xs text-gray-400 uppercase block mb-1">Type</span>
                            <span class="text-white font-medium text-lg">{{ boat.type.label|default('N/A') }}</span>
                        </div>
                        <div>
                            <span class="text-xs text-gray-400 uppercase block mb-1">Créé le</span>
                            <span class="text-white font-medium">{{ boat.createdAt ? boat.createdAt|date('d/m/Y H:i') : '-' }}</span>
                        </div>
                        <div>
                            <span class="text-xs text-gray-400 uppercase block mb-1">Mis à jour le</span>
                            <span class="text-white font-medium">{{ boat.updatedAt ? boat.updatedAt|date('d/m/Y H:i') : '-' }}</span>
                        </div>
                    </div>

                    <div class="mb-6">
                        <span class="text-xs text-gray-400 uppercase block mb-2">Description</span>
                        <div class="text-gray-300 text-sm leading-relaxed bg-gray-700/30 p-4 rounded-lg border border-gray-700">
                            {{ boat.description|default('Aucune description disponible.')|nl2br }}
                        </div>
                    </div>

                    <h4 class="text-sm font-bold !text-gray-200 mb-3 uppercase tracking-wider">Caractéristiques techniques</h4>
                    <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
                        <div class="bg-gray-700/50 p-3 rounded border border-gray-700">
                            <span class="block text-xs !text-gray-500">Longueur</span>
                            <span class="block !text-white font-medium">{{ boat.boatLength|default('-') }} m</span>
                        </div>
                        <div class="bg-gray-700/50 p-3 rounded border border-gray-700">
                            <span class="block text-xs !text-gray-500">Largeur</span>
                            <span class="block !text-white font-medium">{{ boat.boatWidth|default('-') }} m</span>
                        </div>
                        <div class="bg-gray-700/50 p-3 rounded border border-gray-700">
                            <span class="block text-xs !text-gray-500">Puissance</span>
                            <span class="block !text-white font-medium">{{ boat.powerEngine|default('-') }}</span>
                        </div>
                        <div class="bg-gray-700/50 p-3 rounded border border-gray-700">
                            <span class="block text-xs !text-gray-500">Tirant d'eau</span>
                            <span class="block !text-white font-medium">{{ boat.boatDraught|default('-') }} m</span>
                        </div>
                    </div>
                </div>

                {# Historique des locations #}
                <div class="bg-gray-800 rounded-xl shadow-lg p-6 border border-gray-700">
                    <h3 class="text-lg font-bold !text-white mb-4 border-b border-gray-700 pb-2">Dernières locations</h3>
                    
                    {% if boat.rentals is defined and boat.rentals|length > 0 %}
                        <div class="overflow-x-auto">
                            <table class="w-full text-sm text-left text-gray-400">
                                <thead class="text-xs text-gray-500 uppercase bg-gray-700/50">
                                    <tr>
                                        <th class="px-4 py-3 rounded-l-lg">Client</th>
                                        <th class="px-4 py-3">Période</th>
                                        <th class="px-4 py-3 text-right rounded-r-lg">Statut</th>
                                    </tr>
                                </thead>
                                <tbody class="divide-y divide-gray-700">
                                    {% for rental in boat.rentals|slice(0, 5) %}
                                        <tr class="hover:bg-gray-700/30 transition-colors">
                                            <td class="px-4 py-3 font-medium !text-white">
                                                {{ rental.user.firstname|default('') }} {{ rental.user.lastname|default('') }} <span class="text-gray-500 text-xs">({{ rental.user.pseudo|default('Inconnu') }})</span>
                                            </td>
                                            <td class="px-4 py-3">
                                                {{ rental.rentalStart|date('d/m/Y') }} <span class="text-gray-600">au</span> {{ rental.rentalEnd|date('d/m/Y') }}
                                            </td>
                                            <td class="px-4 py-3 text-right">
                                                {# Logique simple de statut basée sur les dates #}
                                                {% if rental.rentalEnd < date() %}
                                                    <span class="text-xs text-gray-500 border border-gray-600 px-2 py-0.5 rounded">Terminée</span>
                                                {% elseif rental.rentalStart > date() %}
                                                    <span class="text-xs text-blue-400 border border-blue-900 bg-blue-900/20 px-2 py-0.5 rounded">À venir</span>
                                                {% else %}
                                                    <span class="text-xs text-green-400 border border-green-900 bg-green-900/20 px-2 py-0.5 rounded">En cours</span>
                                                {% endif %}
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                        {% if boat.rentals|length > 5 %}
                            <div class="mt-4 text-center">
                                <a href="#" class="text-sm text-blue-400 hover:text-blue-300">Voir tout l'historique</a>
                            </div>
                        {% endif %}
                    {% else %}
                        <div class="text-center py-6">
                            <p class="text-gray-500 text-sm italic">Aucune location enregistrée pour ce bateau.</p>
                        </div>
                    {% endif %}
                </div>

            </div>
        </div>
    </div>
</div>
{% endblock %}