{% extends 'base.html.twig' %}

{% block title %}Détails Formule - {{ formula.title }}{% endblock %}

{% block body %}
<div class="bg-gray-900 min-h-screen py-12 text-gray-100">
    <div class="container-main">
        
        {# En-tête #}
        <div class="flex justify-between items-center mb-8 border-b border-gray-700 pb-6">
            <div>
                <h1 class="text-3xl font-bold !text-white">{{ formula.title }}</h1>
                <p class="text-gray-400 mt-1">Détails de la formule</p>
            </div>
            <div class="flex gap-3">
                <a href="{{ path('app_admin_formula_index') }}" class="bg-gray-800 hover:bg-gray-700 text-white border border-gray-600 text-sm px-4 py-2 rounded-md transition-colors">
                    &larr; Retour
                </a>
                <a href="{{ path('app_admin_formula_edit', {'id': formula.id}) }}" class="bg-blue-600 hover:bg-blue-700 text-white font-medium text-sm px-4 py-2 rounded-md transition-colors">
                    Modifier
                </a>
            </div>
        </div>

        <div class="space-y-8">
            {# Infos #}
            <div class="bg-gray-800 rounded-xl shadow-lg p-6 border border-gray-700">
                <h3 class="text-xl font-bold !text-white mb-4 border-b border-gray-700 pb-2">Informations</h3>
                <div class="space-y-6">
                    <div>
                        <span class="block text-xs text-gray-500 uppercase mb-1">Prix</span>
                        <span class="text-3xl font-bold text-blue-400">{{ formula.price }} €</span>
                    </div>
                    <div>
                        <span class="block text-xs text-gray-500 uppercase mb-1">Description</span>
                        <p class="text-gray-300 leading-relaxed">{{ formula.description|nl2br }}</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}